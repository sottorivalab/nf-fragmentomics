conda.enabled = true

params {
	outdir = "./results"
	genome = "/scratch/davide.rambaldi/PILOT_TFBS_EXPERIMENTS/MAYA_LOW_PASS_TIMON_TFBS/LPWGS_HIGH_PURITY/hg38.2bit"
	genome_size = 2913022398
	buffer_size = 25
}

profiles {
	hpc {
		process.executor = 'slurm'
		process.queue = 'cpuq'
		errorStrategy = {task.exitStatus in [104,134,137,139,143,255] ? 'retry' : 'finish' }
		maxErrors = '-1'
		maxRetries = 5
		scratch = "\$TMPDIR"
	}
}
