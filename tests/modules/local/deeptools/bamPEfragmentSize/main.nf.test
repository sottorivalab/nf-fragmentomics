nextflow_process {

    name "Test Process BAMPEFRAGMENTSIZE"
    script "modules/local/deeptools/bamPEfragmentSize/main.nf"
    process "BAMPEFRAGMENTSIZE"

    test("Should run bamPEFragmentSize with default parameters") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                
                """
                input[0] = [
                    [ caseid:'test', sampleid: 'test', timepoint: 'T1' ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true),
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test.paired_end.sorted.bam.bai', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should run bamPEFragmentSize with custom parameters") {

        when {
            params {
                outdir = "tests/results"
                args = "--maxFragmentLength 1000 --binSize 10"
            }
            process {
                
                """
                input[0] = [
                    [ caseid:'test', sampleid: 'test', timepoint: 'T1' ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true),
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/illumina/bam/test.paired_end.sorted.bam.bai', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
            // FIXME check somewhere else
            assert path(process.out.histogram.get(0).get(1)).text.contains("--maxFragmentLength 1000")
            assert path(process.out.histogram.get(0).get(1)).text.contains("--binSize 10")
        }

    }
    
}
